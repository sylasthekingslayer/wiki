{
  "version": 2,
  "framework": "vitepress",
  "buildCommand": "pnpm run docs:build",
  "outputDirectory": "docs/.vitepress/dist",
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "nodeVersion": "22.x"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/auth", "destination": "/api/auth.ts" },
    { "source": "/api/callback", "destination": "/api/callback.ts" }
  ],
  "cleanUrls": true
}
